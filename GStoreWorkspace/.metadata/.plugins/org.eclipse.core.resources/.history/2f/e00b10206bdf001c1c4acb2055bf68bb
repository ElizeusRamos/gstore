package com.gstore.servlets;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.gstore.dao.ProdutoDAO;
import com.gstore.model.Produto;

/**
 * Servlet implementation class ProdutoController
 */
@WebServlet("/ProdutoController")
public class ProdutoController extends HttpServlet {
	private static final long serialVersionUID = 1L;
	
	private ProdutoDAO pdao = new ProdutoDAO();
       
    public ProdutoController() {
        super();
    }

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		String action = request.getParameter("action");
		
		String nome = request.getParameter("nome");
		String descricao = request.getParameter("descricao");
		String precoString = request.getParameter("preco");
		String idString = request.getParameter("codigo");
		
		Produto pd = new Produto();
		
		if(action == null) {
			action = "read";
		}
		
		if(idString != null) {
			Integer codigo = Integer.parseInt(idString);
			pd.setCodigo(codigo);
		}
		
		if(precoString != null) {
			Double preco = Double.parseDouble(precoString);
			pd.setPreco(preco);
		}
		
		pd.setNome(nome);
		pd.setDescricao(descricao);
		
		switch (action) {
		case "create":
			pdao.create(pd);
			System.err.println("Produto Cadastrado!");
			response.sendRedirect("/WEB-INF/Produto.jsp");
			break;
		case "read":
			List<Produto> pds = pdao.list(); 		// faz a pesquisa atualizada de itens
			request.setAttribute("lista", pds); 	// devolver a lista de produtos após ter adicionado
			System.err.println("Listagem de Produtos completa!");
			
			RequestDispatcher rd = request.getRequestDispatcher("/WEB-INF/Produto.jsp");
			rd.forward(request, response);
			break;
		default:
			break;
		}
		
		
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}
